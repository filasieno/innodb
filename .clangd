CompileFlags:
  # Use compile_commands.json generated by CMake; fallback flags for files not in the DB
  Add: [-std=c++23]
  # Point clangd to the CMake compile_commands.json directory (preset: debug)
  CompilationDatabase: ./build/compilation_database

Index:
  Background: Build

Hover:
  ShowAKA: Yes

InlayHints:
  Enabled: Yes
---
If:
  PathMatch:
    - "libak/.*"
Index:
  Background: Skip
---
If:
  PathMatch:
    - "innodb/.*"
Index:
  Background: Skip
---
If:
  PathMatch:
    - "effect/.*"
Index:
  Background: Skip  