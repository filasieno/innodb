{
	"Lua.diagnostics.globals": [],
	"nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix",
	"extensions.ignoreRecommendations": false,
	"clangd.arguments": [
//		"--log=verbose" 
		"--enable-config",
		"--background-index",
		"--pch-storage=disk",
		"--all-scopes-completion",
		"--header-insertion=never",
		"--clang-tidy=false",
		"--query-driver=/nix/store/*-clang-wrapper-*/bin/clang++;*/bin/clang++",
		"--compile-commands-dir=${workspaceFolder}/build/compilation_database"
	],
	"clangd.onConfigChanged": "restart",
	"files.associations": {
		"*.ic": "cpp"
	},
	
	"lldb.library": "/nix/store/8rss7ifvfb6yficbnyhmjjgic8zsn4k4-lldb-21.1.2/lib/liblldb.so",
	
	"terminal.integrated.env.linux": {
		"TMPDIR": "${workspaceFolder}/.tmp",
		"TEMP": "${workspaceFolder}/.tmp",
		"TMP": "${workspaceFolder}/.tmp"
	},
	"lldb.adapterEnv": {
		"TMPDIR": "${workspaceFolder}/.tmp",
		"TEMP": "${workspaceFolder}/.tmp",
		"TMP": "${workspaceFolder}/.tmp"
	},
	"cmake.environment": {
		"TMPDIR": "${workspaceFolder}/.tmp",
		"TEMP": "${workspaceFolder}/.tmp",
		"TMP": "${workspaceFolder}/.tmp"
	},
}